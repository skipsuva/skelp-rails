<!DOCTYPE html>
<html>
<head>
  <title>SkelpRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:error] %>
<div>
  <%= flash[:error] %>
</div>
  <% end %>

<% if flash[:notice] %>
<div>
  <%= flash[:notice] %>
</div>
  <% end %>

  <div class="header">
      <div class="logo">
        <img src="/dancingbeer.gif" alt="dancing beer"/>
        <a href="/"><img id="logo" src="/logo.png" alt="logo"/></a>
        <img src="/dancingbeer.gif" alt="dancing beer"/>
      </div>
      <nav>
        <li> <a href="/bars/search"> Search </a></li>
        <li> <a href="/bars/"> Bars </a></li>
        <li> <a href="/reviews/new"> Write a Review </a></li>
        <% if logged_in? %>
          Current user is: <%= current_user.name%>
          <li><%= link_to "Log Out", sessions_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign Up", new_registration_path %></li>
          <li><%= link_to "Sign In", new_session_path %></li>
        <%end%>
      </nav>
    </div>
<%= yield %>

</body>
</html>
