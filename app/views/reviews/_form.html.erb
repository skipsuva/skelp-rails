<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Who Are You?" %><br>
    <%= f.collection_select :patron_id, Patron.order(:name),:id,:name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label "Which Bar?" %><br>
    <%= f.collection_select :bar_id, Bar.order(:name),:id,:name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </div>
  <div class="field">
    <%= f.label :would_recommend %><br>
    <%= f.check_box :would_recommend %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
